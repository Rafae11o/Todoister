<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <TextView
        android:id="@+id/widget_item_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:maxLines="2"
        android:text="Example Example Example Example sadf ad Example Example Example Example"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/widget_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Fri, May 20"/>

        <TextView
            android:id="@+id/widget_item_priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="High"/>


    </LinearLayout>

</LinearLayout>